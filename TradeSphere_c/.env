# ===========================================
# TradeSphere Project Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================

# Next.js API Base URL (Backend API Server)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# NextAuth Secret (generate a random string)
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Database URL for Prisma (Frontend User Database)
DATABASE_URL=postgresql://exchangeUserDb_owner:dxAQW0ofFhG7@ep-southeast-1.aws.neon.tech/exchangeUserDb?sslmode=require

# ===========================================
# BACKEND API SERVER ENVIRONMENT VARIABLES
# ===========================================

# PostgreSQL Database Configuration (Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tradesphere_db
DB_USER=postgres
DB_PASSWORD=Post

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Server Port
API_PORT=3000

# ===========================================
# ENGINE ENVIRONMENT VARIABLES
# ===========================================

# Enable snapshot functionality
WITH_SNAPSHOT=true

# Redis Configuration for Engine
ENGINE_REDIS_HOST=localhost
ENGINE_REDIS_PORT=6379

# ===========================================
# WEBSOCKET SERVER ENVIRONMENT VARIABLES
# ===========================================

# WebSocket Server Port
WS_PORT=8080

# Redis Configuration for WebSocket
WS_REDIS_HOST=localhost
WS_REDIS_PORT=6379

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Environment
NODE_ENV=development

# Enable debug logging
DEBUG=true
