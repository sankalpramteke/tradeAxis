# ===========================================
# TradeSphere Project Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================

# Next.js API Base URL (Backend API Server)
NEXT_PUBLIC_BASE_URL=http://localhost:3000/api/v1

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# NextAuth Secret (generate a random string)
NEXTAUTH_SECRET=8f3c4b2d1a9e5f6071c8d2e4f6a7b9c0d1e2f3a4b5c6d7e8091a2b3c4d5e6f70

# Database URL for Prisma (Frontend User Database)
DATABASE_URL=postgresql://tradesphere_user:12345678@localhost:5432/my_database

# ===========================================
# BACKEND API SERVER ENVIRONMENT VARIABLES
# ===========================================

# PostgreSQL Database Configuration (Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=my_database
DB_USER=tradesphere_user
DB_PASSWORD=12345678

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Server Port
API_PORT=3000

# ===========================================
# ENGINE ENVIRONMENT VARIABLES
# ===========================================

# Enable snapshot functionality
WITH_SNAPSHOT=true

# Redis Configuration for Engine
ENGINE_REDIS_HOST=localhost
ENGINE_REDIS_PORT=6379

# ===========================================
# WEBSOCKET SERVER ENVIRONMENT VARIABLES
# ===========================================

# WebSocket Server Port
WS_PORT=8080

# Redis Configuration for WebSocket
WS_REDIS_HOST=localhost
WS_REDIS_PORT=6379

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Environment
NODE_ENV=development

# Enable debug logging
DEBUG=true
